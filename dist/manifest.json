{
  "manifest_version": 3,
  "name": "Standing Desk Reminder",
  "version": "1.0.1",
  "description": "Notificaciones para alternar entre trabajar de pie y sentado",
  "action": {
    "default_title": "Standing Desk Reminder",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "permissions": ["storage", "notifications", "alarms", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  }
}